@import "fonts"
:focus, :active
  outline none !important

::-moz-focus-inner
  border 0 !important

html
  overflow visible
  min-width 720px
  height 100%
  font-family font-family, sans-serif
  font-size 100px
  -webkit-overflow-scrolling touch
  @media (max-width 1380px)
    font-size 92px
  @media (max-width 1280px)
    font-size 84px
  @media (max-width 1180px)
    font-size 77px
  @media (max-width 1080px)
    font-size 70px

body
  display flex
  flex-direction column
  position relative
  min-height 100%
  font-size: .16rem
  max-width: 19.2rem
  margin: 0 auto



  // Предполагаю, что внутри body три потомка: header + content + footer, прижимаем футер к низу
  > *:nth-child(2)
    flex-grow 1

a
  color inherit
  text-decoration none

button, input[type="submit"]
  padding 0
  border none
  border-radius 0
  background transparent
  color inherit
  font-family font-family, sans-serif
  font-size inherit
  cursor pointer

  &[disabled]
    cursor default
ul
  list-style-type: none
  align-items: center
  padding: 0
  margin: 0
