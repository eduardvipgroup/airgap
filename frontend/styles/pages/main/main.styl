@import 'vars'
.main
  overflow hidden
.main__block
  padding .1rem
  display flex
  justify-content space-between
  position relative
  background-color: #e6e5df
  .main__block_content
     display flex
     flex-direction column
  .main__block_images
     width 6.8rem
     height 6.8rem
     line-height: 6.8rem
     overflow hidden
     position relative
     img
       width auto
       max-width none
       height 4.8rem
  .main__block_round
     position absolute
     top -.4rem
     right -.8rem
     border-radius 50%
     background color-subtitle
     width 3.08rem
     height 3.08rem
     text-align center



  h2
    &::before, &::after
      content ''
      display inline-block
      vertical-align middle

    &::before
      @extends $svg-men
      margin-right .01rem

    &::after
      @extends $svg-woman
      margin-left .01rem

  p
    font-weight 300

    &:first-of-type
      font-weight normal

.main__images
  display flex
  flex-wrap wrap

  img
    display block
